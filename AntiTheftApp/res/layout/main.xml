<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />

    <Button
        android:id="@+id/startAlarmServiceButton"
        android:layout_width="175dp"
        android:layout_height="136dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="50dp"
        android:text="Start"     
        android:onClick="startAlarmService" />

    <Button
        android:id="@+id/stopAlarmServiceButton"
        android:layout_width="175dp"
        android:layout_height="136dp"
        android:layout_marginLeft="500dp"
        android:text="Stop"
        android:onClick="stopAlarmService" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_height="wrap_content"
            android:text="Silent Alarm Time"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="1 Second" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Seconds" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Seconds" />
    </RadioGroup>

</LinearLayout>